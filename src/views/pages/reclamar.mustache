<form>
    <label for="reclamacao-sobre">Reclamação sobre:</label>

    <input type="radio" id="radio-linha" name="reclamacao" value="linha-geral" checked>
    <label for="radio-linha">Linha em geral</label>

    <input type="radio" id="radio-estacao" name="reclamacao" value="estacao-especifica">
    <label for="radio-estacao">Estação específica</label>

    <input type="radio" id="radio-carro" name="reclamacao" value="carro-especifico">
    <label for="radio-carro">Carro específico</label>

    <div id="linha-geral">
        <label for="motivo-reclamacao">Motivo da reclamação:</label>
        <br><br>
        <select id="motivo-reclamacao" name="motivo-reclamacao">
            <option value="velocidade-reduzida">Velocidade reduzida</option>
            <option value="somente-um-lado-da-via-funcionando">Somente um lado da via funcionando</option>
            <option value="greve">Greve</option>
            <option value="linha-paralizada">Linha paralizada</option>
        </select>
        <br>
        <label for="descricao-reclamacao">Fale um pouco mais sobre sua experiência:</label>
        <textarea id="descricao-reclamacao" name="descricao-reclamacao" placeholder="Digite aqui..."></textarea>
        <br><br>
        <button type="submit" value="Enviar">Enviar</button>
    </div>


    <div id="estacao-especifica" style="display:none">
        <label>Selecione a estação:</label>
        <br>
        <select name="estacao">
            <option value="osasco">Osasco</option>
            <option value="presidenteAltino">Presidente Altino</option>
            <option value="ceasa">Ceasa</option>
            <option value="vilaLobosJaguare">Vila Lobos-Jaguaré</option>
        </select>
        <br><br>
        <label>Selecione o problema:</label>
        <br>
        <select name="problema">
            <option value="elevadorQuebrado">Elevador quebrado</option>
            <option value="escadaRolanteQuebrada">Escada rolante quebrada</option>
            <option value="estacaoFechada">Estação fechada</option>
            <option value="estacaoSemGuardas">Estação sem guardas</option>
            <option value="estacaoAlagada">Estação alagada</option>
        </select>
        <br><br>
        <label>Conte um pouco mais sobre sua experiência:</label>
        <br>
        <textarea name="descricaoEstacao" placeholder="Digite aqui..."></textarea>
        <br><br>
        <button type="submit" value="Enviar">Enviar</button>
    </div>


    <div id="carro-especifico" style='display: none;'>
        <label>Número do carro:</label>
        <input type="text" placeholder="Número do carro">
        <select>
            <option>Porta quebrada</option>
            <option>Ar Condicionado desligado</option>
            <option>Trem muito sujo</option>
            <option>Janela quebrada</option>
        </select>
        <textarea placeholder="Conte um pouco mais sobre sua experiência"></textarea>
        <br><br>
        <button type="submit" value="Enviar">Enviar</button>
    </div>

</form>


<script>
    const radio_linha = document.querySelector('#radio-linha');
    const radio_estacao = document.querySelector('#radio-estacao');
    const radio_carro = document.querySelector('#radio-carro');
    const div_linha_geral = document.querySelector('#linha-geral');
    const div_estacao_especifica = document.querySelector('#estacao-especifica');
    const div_carro_especifico = document.querySelector('#carro-especifico');
    //const motivoReclamacao = document.querySelector('#motivo-reclamacao');
    // const descricaoReclamacao = document.querySelector('#descricao-reclamacao');

    radio_estacao.addEventListener('change', () => {
        div_estacao_especifica.style.display = 'block';
        div_linha_geral.style.display = 'none';
        div_carro_especifico.style.display = 'none';
        //   motivoReclamacao.required = false;
        //   descricaoReclamacao.required = false;
        console.log("estação específica selecionado")
    });

    radio_carro.addEventListener('change', () => {
        div_carro_especifico.style.display = 'block';
        div_linha_geral.style.display = 'none';
        div_estacao_especifica.style.display = 'none';
        //   motivoReclamacao.required = false;
        //   descricaoReclamacao.required = false;
        console.log("Carro específico selecionado")
    });

    radio_linha.addEventListener('change', () => {
        try {
            div_linha_geral.style.display = 'block';
            div_estacao_especifica.style.display = 'none';
            div_carro_especifico.style.display = 'none';
        }
        catch (error){
            console.log(error)
        }
        //   motivoReclamacao.required = true;
        //   descricaoReclamacao.required = true;
        console.log("Linha em geral selecionado")
    });
</script>